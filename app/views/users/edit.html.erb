<html>
  <body>
    <main>
      <p id="notice"></p>
        <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		      <h1>User info</h1>
  		      <%= form_with model: @user, method: :patch do |f| %>
  		        <div class="form-group">
  		          <h4>Name</h4>
                <%= f.text_field :name, :class => "form-control user_name" %>
  		        </div>
  		        <div class="form-group">
  		          <h4>image</h4>
  		          <%= f.file_field :profile_image, accept: "image/*", :class => "user_image" %>
  		        </div>
  		        <div class="form-group">
  		          <h4>Introduction</h4>
                <%= f.text_area :introduction, :class => "form-control user_introduction" %>
  		        </div>
  		        <div class="form-group">
  		          <%= f.submit 'Update User',class:"btn btn-sm btn-secondary" %>
  		        </div>
            <% end %>
  		    </div>
  		  </div>
  		</div>
  	</main>
  </body>
</html>